@model Categoria
@{
    ViewData["Title"] = "Editar categoria";
}

<h1>Editar categoria</h1>

<form asp-action="Actualizar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()" class="form-select"></select>
        <span asp-validation-for="TipoOperacionId"></span>
    </div>
    <button class="btn btn-primary" type="submit">Enviar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
