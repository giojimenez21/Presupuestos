@model PaginacionRespuesta
@{
    var platinllaLink = string.Concat(Model.BaseURL, "?pagina={0}&recordsPorPagina={1}");
    var activarBotonAnterior = Model.Pagina > 1;
    var activarBotonSiguiente = Model.Pagina < Model.CantidadTotalPaginas;
}
<nav>
    <ul class="pagination">
        <li class="page-item">
            @if (activarBotonAnterior)
            {
                <a class="page-link" href="@string.Format(platinllaLink, Model.Pagina - 1, Model.RecordsPorPagina)">
                    Anterior
                </a>
            }

        </li>
        @for (var pagina = 1; pagina <= Model.CantidadTotalPaginas; pagina++)
        {
            <li class="page-item @(pagina == Model.Pagina ? "active" : null)">
                <a class="page-link" href="@string.Format(platinllaLink, pagina, Model.RecordsPorPagina)">@pagina</a>
            </li>
        }
        @if (activarBotonSiguiente)
        {
            <li class="page-item">
                <a class="page-link" href="@string.Format(platinllaLink, Model.Pagina + 1, Model.RecordsPorPagina)">
                    Siguiente
                </a>
            </li>
        }
    </ul>
</nav>